@model List<SimpleMVC.Models.Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #users td, #users th {
        border: 1px solid #ddd;
        padding: 8px;
    }
</style>
<div>
    <h1>Users</h1>
</div>

<div>
    <table id="users">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var users in Model)
                {
                    <tr>
                        <td>@users.Id</td>
                        <td>@users.Name</td>
                        <td>@users.Email</td>
                        <td>@Html.ActionLink("Vezi","ById","Users", new { id =@users.Id },null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.ActionLink("Create","Create","Users")
</div>