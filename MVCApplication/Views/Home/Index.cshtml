@{
    ViewBag.Title = "Digital Library";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>BookLibrary</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
   
    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */

        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }
        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
        .row.content {
            height: 450px
        }

        /* Set gray background color and 100% height */
        .sidenav {
            padding-top: 20px;
            background-color: #f1f1f1;
            height: 100%;
        }

        /* Set black background color, white text and some padding */
        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .center {
            position: absolute;
            left: 0;
            top: 5%;
            width: 100%;
            text-align: center;
            font-size: 40px;
            color: darkmagenta;
        }

        body {
            background-color: plum;
        }

        navbar {
            background-color: darkmagenta;
        }
    </style>
</head>
<body>
   
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Digital Library</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                    <li> @Html.ActionLink("Books", "BookListIndex", "Books")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.ActionLink("Signup Now!", "SignUp", "Account")</li>                 
                </ul>
                <ul  class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Login", "LogIn", "Account")
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
                <div class="well">
                <p>
                    <img class="d-block w-100" src="~/Images/Books2.jpg" asp-append-version="true" alt="First slide">
                </p>
                <p><a href="http://google.com" class="button">Go to search books</a></p>
                </div>

            </div>
            <div class="col-sm-8 text-left">
                <h1><img class="d-block w-100" src="~/Images/Book3.jpg" asp-append-version="true" alt="First slide"></h1>
                <div class="center">
                                    <p>Digital Books Library</p>
                                 <p><i>Reading is the dreaming with open eyes</i></p>
                </div>
                
                <hr>
                <h2 ><i>So many books, so little time.</i></h2>
               
            </div>
            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p>
                        <img class="d-block w-100" src="~/Images/Books.jpg" asp-append-version="true" alt="First slide">
                    </p>
                    <p><a href="https://bookroo.com/blog/the-100-best-quotes-about-reading" class="button">Go to inspirational quotes</a>
                </div>
        </div>
    </div>

   </div>

</body>
</html>
